  "bugs": {
    "url": "https://github.com/sidmani/protochan/issues"
  },
  "homepage": "https://github.com/sidmani/protochan#readme",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "tap": "^11.1.0"
  }
